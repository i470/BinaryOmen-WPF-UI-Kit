    <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" TargetType="{x:Type Separator}" BasedOn="{StaticResource Separator}" />
    <Style x:Key="DarkSeparator" TargetType="{x:Type Separator}" BasedOn="{StaticResource Separator}">
        <Setter Property="Background" Value="{DynamicResource DarkSeparatorBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DarkSeparatorBackground}"/>
    </Style>
    <Style x:Key="LightSeparator" TargetType="{x:Type Separator}" BasedOn="{StaticResource Separator}">
        <Setter Property="Background" Value="{DynamicResource LightSeparatorBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource LightSeparatorBackground}"/>
    </Style>
