    <SolidColorBrush x:Key="LightBackground" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="LightForeground" Color="#DD000000"/>
    <SolidColorBrush x:Key="DarkBackground" Color="#FF303030"/>
    <SolidColorBrush x:Key="DarkForeground" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="DarkSeparatorBackground" Color="#1F000000" />
    <SolidColorBrush x:Key="LightSeparatorBackground" Color="#1FFFFFFF" />
    
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RaisedButton}" />
    <Style TargetType="{x:Type Calendar}" BasedOn="{StaticResource CalendarPortrait}" />
    <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource CheckBox}" />
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ComboBox}" />
